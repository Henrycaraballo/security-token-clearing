{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "lib": ["es6"],
    "module": "CommonJS",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "types": [
      "@0xproject/typescript-typings/types/web3",
      "node" 
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
